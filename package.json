{
  "name": "webm-converter",
  "description": "Conversor de arquivos .webm para .mp4 especifico para o Gnome ScreenCast",
  "version": "1.0.0",
  "main": "index.js",
  "bin": {
    "webm-converter": "./index.js"
  },
  "scripts": {
    "build": "pkg . --output dist/webm-converter",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/webm-converter-linux"
  },
  "pkg": {
    "assets": [
      "bin/**/*"
    ],
    "targets": [
      "node18-linux-x64"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
